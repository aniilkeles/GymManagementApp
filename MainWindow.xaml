<Window x:Class="GymManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GymManagementApp"
        xmlns:vm="clr-namespace:GymManagementApp.ViewModels"
        Title="Toros Gym Management - Elite Version" Height="730" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#f4f7f6"
        Language="en-US">

    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemBorder" Background="{TemplateBinding Background}" CornerRadius="10" Margin="2">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.03" ScaleY="1.03"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ItemBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="2" Color="#bdc3c7" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#3498db"/>
                                <Setter TargetName="ItemBorder" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" Background="White" Padding="20" CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="1" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Quick Assign Plan" FontSize="18" FontWeight="Bold" Foreground="#34495e" Margin="0,0,0,12"/>
                    <ComboBox x:Name="WorkoutPlanComboBox" DisplayMemberPath="PlanName" Padding="10" Margin="0,0,0,10"/>
                    <Button Content="Assign Plan" Height="40" Background="#3498db" Foreground="White"
                            FontWeight="Bold" Click="AssignPlan_Click" Cursor="Hand" Margin="0,0,0,25">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Separator Margin="0,5,0,20" Background="#f1f1f1"/>

                    <TextBlock Text="Member Editor" FontSize="20" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,15"/>
                    <TextBlock Text="Full Name" Foreground="#95a5a6" Margin="0,0,0,5" FontSize="11"/>
                    <TextBox x:Name="NameTextBox" Margin="0,0,0,15" Padding="10"/>

                    <TextBlock Text="Birth Date" Foreground="#95a5a6" Margin="0,0,0,5" FontSize="11"/>
                    <DatePicker x:Name="BirthDatePicker" Margin="0,0,0,15" Padding="5"/>

                    <TextBlock Text="Membership" Foreground="#95a5a6" Margin="0,0,0,5" FontSize="11"/>
                    <ComboBox x:Name="MembershipComboBox" Margin="0,0,0,15" Padding="10">
                        <ComboBoxItem Content="Standard" IsSelected="True"/>
                        <ComboBoxItem Content="Premium"/>
                        <ComboBoxItem Content="VIP"/>
                        <ComboBoxItem Content="1 Year"/>
                        <ComboBoxItem Content="6 Months"/>
                        <ComboBoxItem Content="3 Months"/>
                    </ComboBox>

                    <TextBlock Text="Primary Trainer" Foreground="#95a5a6" Margin="0,0,0,5" FontSize="11"/>
                    <ComboBox x:Name="TrainerComboBox" Margin="0,0,0,15" Padding="10"/>

                    <StackPanel Margin="0,5,0,20">
                        <Grid>
                            <TextBlock Text="Gym Occupancy Rate" FontSize="11" Foreground="#95a5a6" FontWeight="Bold"/>
                            <TextBlock x:Name="CapacityText" Text="3/50" FontSize="11" Foreground="#34495e" HorizontalAlignment="Right"/>
                        </Grid>
                        <ProgressBar x:Name="OccupancyBar" Minimum="0" Maximum="50" Value="3" Height="10" Margin="0,5,0,0" Foreground="#2ecc71">
                            <ProgressBar.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </ProgressBar.Resources>
                        </ProgressBar>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="Register" Height="45" Background="#2ecc71" Foreground="White"
                                FontWeight="Bold" Click="AddMember_Click" Cursor="Hand" Margin="0,0,5,0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Grid.Column="1" Content="Update" Height="45" Background="#f39c12" Foreground="White"
                                FontWeight="Bold" Click="UpdateMember_Click" Cursor="Hand" Margin="5,0,0,0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border Grid.Column="1" Grid.Row="0" Background="White" Padding="15" CornerRadius="15" Margin="15,0,0,0">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="1" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="5,0,5,20">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#f8f9fa" Padding="12,6" CornerRadius="20">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#2ecc71" Margin="0,0,6,0"/>
                                <TextBlock Text="Active Community: " Foreground="#7f8c8d" FontSize="12"/>
                                <TextBlock Text="{Binding ElementName=MembersListBox, Path=Items.Count}" FontWeight="Bold" Foreground="#2c3e50" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <Border Grid.Column="1" HorizontalAlignment="Right" Background="#f1f3f4" CornerRadius="20" Padding="12,2" Width="300">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="👤" VerticalAlignment="Center" Margin="5,0,2,0" Foreground="#3498db" FontSize="14"/>
                            <TextBlock Grid.Column="1" Text="📋" VerticalAlignment="Center" Margin="2,0,8,0" Foreground="#2ecc71" FontSize="14"/>

                            <TextBox x:Name="SearchTextBox" 
                                     Grid.Column="2" 
                                     Background="Transparent" 
                                     BorderThickness="0" 
                                     VerticalContentAlignment="Center" 
                                     Padding="5" 
                                     TextChanged="SearchTextBox_TextChanged"
                                     FontSize="13" 
                                     Foreground="#2c3e50"
                                     ToolTip="Search members or trainers..."/>
                        </Grid>
                    </Border>
                </Grid>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="MembersListBox" Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectionChanged="MembersListBox_SelectionChanged">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="12" BorderBrush="#f1f1f1" BorderThickness="1" Margin="10" Padding="18"
                                        Background="{Binding StatusColor}" Width="210">
                                    <StackPanel>
                                        <Ellipse Width="10" Height="10" HorizontalAlignment="Right" Margin="0,-10,-5,10">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#bdc3c7"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Member.IsOnline}" Value="True">
                                                            <Setter Property="Fill" Value="#2ecc71"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>

                                        <Image Source="pack://application:,,,/GymManagementApp;component/Images/user_icon.jpg" 
                                               Width="50" Height="50" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                                        <TextBlock Text="{Binding Member.FullName}" FontWeight="Bold" FontSize="17" TextAlignment="Center" Foreground="#2c3e50"/>
                                        <TextBlock Text="{Binding Member.Age, StringFormat='Age: {0}'}" TextAlignment="Center" Foreground="#95a5a6" FontSize="12" Margin="0,2,0,0"/>

                                        <Separator Margin="0,10" Background="#f1f1f1"/>

                                        <TextBlock Text="{Binding Member.MembershipType}" FontSize="11" TextAlignment="Center" FontWeight="Bold" Foreground="#3498db" Opacity="0.8"/>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6">
                                            <TextBlock Text="Days Remaining: " FontSize="11" Foreground="#95a5a6" VerticalAlignment="Center"/>
                                            <Border Background="#fff3e0" CornerRadius="6" Padding="6,2" Margin="4,0,0,0">
                                                <TextBlock Text="{Binding Member.DaysRemaining}" FontSize="12" FontWeight="Bold" Foreground="#e67e22"/>
                                            </Border>
                                        </StackPanel>

                                        <TextBlock Text="{Binding Member.WorkoutPlan.PlanName, TargetNullValue='No Active Plan'}" 
                                                   FontSize="12" Foreground="#27ae60" FontWeight="SemiBold" Margin="0,6,0,0" TextAlignment="Center"/>

                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,15,0,0">
                                            <Image Source="pack://application:,,,/GymManagementApp;component/Images/trainer_icon.jpg" 
                                                   Width="45" Height="45" Margin="0,0,0,8" 
                                                   Visibility="{Binding Member.WorkoutPlan, Converter={StaticResource NullToVisibilityConverter}, FallbackValue=Collapsed}"/>
                                            <TextBlock Text="{Binding Member.WorkoutPlan.Trainer.FullName}" 
                                                       FontSize="12" TextAlignment="Center" Foreground="#34495e" FontStyle="Italic" FontWeight="Bold"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>

                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="Freeze Membership" Height="45" Background="#bdc3c7" Foreground="#2c3e50"
                            FontWeight="Bold" Click="FreezeMember_Click" Cursor="Hand" Margin="0,0,10,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Grid.Column="1" Content="Remove Member" Height="45" Background="#e74c3c" Foreground="White"
                            FontWeight="Bold" Click="DeleteMember_Click" Cursor="Hand" Margin="10,0,0,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="#2c3e50" Height="30" CornerRadius="8" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal">
                <Ellipse Width="8" Height="8" Fill="#e67e22" Margin="15,0,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusLogText" 
                           Text="Toros Gym Management System Active..." 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           FontSize="11" 
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>